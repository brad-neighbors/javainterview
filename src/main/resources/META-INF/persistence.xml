<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <!-- Persistence unit using a local entity manager for database accesses -->
    <persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
        <class>com.jglitter.domain.User</class>
        <class>com.jglitter.domain.Tweet</class>
    </persistence-unit>


    <!--
    **ATTENTION**
    Do not specify a <provider> here!
    Instead, customize startup.properties
    which should be read by dbms-config.xml
    -->
</persistence>
